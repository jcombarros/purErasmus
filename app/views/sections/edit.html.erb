<h1>Edit Section</h1>

<hr />

<p class="text-info">Does this section have any mistake or field outdated? Help us, and feel free to modify it :)</p>

<hr />

<%= form_for @section, :html => { :class => "form-horizontal" } do |u| %>
	<fieldset>
	    <div class="control-group">
	        <%= u.label :title, "Title", :class => "control-label" %>
	        <div class="controls">
	            <%= u.text_field :title, :placeholder => "Title" %>
	        </div>
	    </div>

	    <div class="control-group">
	        <%= u.label :description, "Description", :class => "control-label" %>
	        <div class="controls">
	            <%= u.text_area :description, :placeholder => "Description", :rows =>7  %>
	        </div>
	    </div>
	</fieldset>

    <div class="form-actions">
		<%= u.submit "Update", :class => "btn btn-primary" %>
		<%= link_to "Cancel", :back, :class => "btn" %>
	</div>
<% end %>