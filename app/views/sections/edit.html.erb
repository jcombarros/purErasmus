<%= form_for @section do |uForm| %>
<table>
	<tr>
		<td>Title:</td>
		<td><%= uForm.text_field :title %></td>
	</tr>
	<tr>
		<td>Description:</td>
		<td><%= uForm.text_area :description %></td>
	</tr>
</table>
<%= uForm.submit "Update" %><br>
<%= link_to 'Back', {:action => 'show', :id => @section } %>
<% end %>