<h2>Users</h2>

<% if @users.empty? %>
	<em> No users found</em>
<% else %> 
	<table>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<!--<th>Home University</th>
			<th>Foreign University</th>-->
		</tr>
			<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.full_name, user %></td>
			<td><%= user.email %></td>
		</tr>
	</table>
<% end %>
<% end %>
<br>
<%= link_to "Add new user", {:action => 'new' }%>


