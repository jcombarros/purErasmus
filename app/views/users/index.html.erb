<h2>Users</h2>

<% if @users.empty? %>
	<em> No users found</em>
<% else %> 
	<table>
		<tr>
			<th>Name</th>
			<th>Email</th>
			<!--<th>Home University</th>
			<th>Foreign University</th>-->
		</tr>
			<% @users.each do |user| %>
		<tr>
			<td><%= link_to user.full_name, user %></td>
			<td><%= user.email %></td>
			<% if false %>
				<td><%= link_to user.home_university.name_english, user.home_university %></td>
				<td><%= link_to user.foreign_university.name_english, user.	foreign_university %></td>
			<% end %>
		</tr>
	<% end %>	
<% end %>
</table>
