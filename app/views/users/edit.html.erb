
<% # This view displays a form for a user to register %>
<h1>Edit my profile</h1>

<hr>

<p class="text-info">You can update your account at any given moment to better reflect your current situation.</p>
<p class="text-info">We use Gravatar for profile pictures. You can create <a href="http://gravatar.com">an account here</a></p>

<hr>

<% # Display the actual "Edit User" form. %>
<%= form_for @user, :html => { :class => "form-horizontal" } do |f| %>
	<%= render :partial => "user_edit", :locals => {
		:u => @user,
		:f => f,
		:countries => @countries
	} %>

    <div class="form-actions">
		<%= f.submit "Save", :class => "btn btn-primary" %>
	</div>
<% end %>
