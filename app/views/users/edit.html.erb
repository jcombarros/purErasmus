<%= form_for @user do |uForm| %>
<table>
	Current name: <% @user.full_name %><br>
	New name: <br>
	<tr>
		<td>First Name:</td>
		<td><%= uForm.text_field(@user.first_name) :first_name, @user.first_name %></td> <!--funcionara???-->
	</tr>
	<tr>
		<td>Last Name:</td>
		<td><%= uForm.text_field :last_name %></td>
	</tr>

	Current email: <% @user.email %><br>
	New email: <br>
	<tr>
		<td>Email:</td>
		<td><%= uForm.email_field :email %></td>
	</tr>

	<tr>
		<td>Password:</td>
		<td><%= uForm.password_field :new_password %></td>
	</tr>
	<tr>
		<td>Password (again):</td>
		<td><%= uForm.password_field :new_password_confirmation %></td>
	</tr>
</table>
<%= uForm.submit "Update" %>
<%= link_to 'Back', {:action => 'index' } %>
<% end %>