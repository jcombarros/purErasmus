<h1><%= @user.full_name %></h1>
<hr />
<h4><a href="mailto:#">Email: <%= @user.email %></a></h4>

<h4 >Home university: <%if @user.home_university %><%= link_to @user.home_university.name_original, @user.home_university %> in <%= link_to @user.home_university.city.name, @user.home_university.city %> (<%= link_to @user.home_university.city.country.name, @user.home_university.city.country %>)<% end %></h4>

<h4>Foreign university: <% if @user.foreign_university %><%= link_to @user.foreign_university.name_original, @user.foreign_university %> in <%= link_to @user.foreign_university.city.name, @user.foreign_university.city %> (<%= link_to @user.foreign_university.city.country.name, @user.foreign_university.city.country %>)<% end %></h4>

<%if @user == @user_me %>
	<br>
	<%= link_to 'Edit profile', {:action => 'edit', :id => @user.id}, :class => "btn" %>
	<% if false %>
		<%= link_to "Delete", 	@user, 	:method => :delete, :confirm => "Are you sure you want to delete this user?", :class => "btn" %>
	<% end %>
<% end %>
