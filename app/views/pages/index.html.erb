<h2>Pages</h2>
<% if @pages.empty? %>
<em> No pages found</em>
<br>
<% else %> 
	<table class="table table-striped">
		<tr>
			<th>Title</th>
			<th>ID</th>
			<th></th>
		</tr>
<% @pages.each do |page| %>
		<tr>
			<td><%= page.title %></td>
			<td><%= page.university_id %></td>
			<td><%= link_to "Delete", page, :method => :delete, :confirm => "Are you sure you want to delete this page?" %></td>
		</tr>
<% end %>	
	</table>
<% end %>
<br>
<%= link_to "Add new page", {:action => 'new' }%><br>
<%= link_to 'Back', :back %>
