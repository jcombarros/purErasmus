
<% # This view displays a form for a user to edit an existing City %>
<h1><%= @city.name %></h1>

<hr>

<p class="text-info">Changing any of the following values will instantly update the corresponding city. If you change the administrator, you won't be able to edit the city anymore.</p>

<hr>

<%= form_for @city, :html => { :class => "form-horizontal" } do |f| %>
	<%= render :partial => "city_edit", :locals => {
		:f => f,
		:countries => @countries,
		:mode => :edit
	} %>

	<div class="form-actions">
		<%= f.submit "Save", :class => "btn btn-primary" %>
		<%= link_to "Cancel", @city, :class => "btn" %>
	</div>
<% end %>

<ul class="breadcrumb">
	<li><%= link_to "Home", root_url %> <span class="divider">/</span></li>
	<li><%= link_to "Cities", cities_path %> <span class="divider">/</span></li>
	<li><%= link_to @city.name, @city %> <span class="divider">/</span></li>
	<li class="active">Edit</li>
</ul>
