<div class="hidden city_edit_form"></div>

<!-- City information -->
<fieldset>
    <legend>City information</legend>

    <!-- Name -->
    <div class="control-group">
        <%= f.label :name, "Name", :class => "control-label" %>
        <div class="controls">
            <%= f.text_field :name, :placeholder => "Name" %>
        </div>
    </div>

    <!-- Country -->
    <div class="control-group">
        <%= f.label :country_id, "Country", :class => "control-label" %>
        <div class="controls">
            <%= f.select :country_id, countries %>
        </div>
    </div>

    <!-- Description -->
    <div class="control-group">
        <%= f.label :description, "Description", :class => "control-label" %>
        <div class="controls">
            <%= f.text_area :description, :placeholder => "Description", :class => "input-xxlarge", :rows => 6 %>
        </div>
    </div>
</fieldset>

<% if :mode == :edit %>
    <!-- Authorizations -->
    <fieldset>
        <legend>Authorizations</legend>
    </fieldset>
<% end %>