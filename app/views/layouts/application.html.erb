<!DOCTYPE html>
<html>
<head>
    <title>Purerasmus</title>
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <a class="brand" href="/">Purerasmus</a>

                <div class="nav-collapse collapse">
                    <ul class="nav">                        
                        <% if @site_user %>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    My cities
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    My universities
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    
                                </ul>
                            </li>
                        <% end %>
                    </ul>

                    <form class="navbar-search pull-left">
                        <input type="text" class="search-query" placeholder="Find a City or a University">
                    </form>

                    <ul class="nav pull-right"> 
                        <% if @site_user %>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    <%= image_tag @site_user.gravatar_url, :class => "avatar" %>
                                    <%= @site_user.full_name %>
                                    <b class="caret"></b>
                                </a>
                                <ul class="dropdown-menu">
                                    <li><%= link_to "My account", edit_user_path(@site_user) %></li>
                                    <li><%= link_to "Logout", logout_path %></li>
                                </ul>
                            </li>
                        <% else %>                
                            <li<%= raw ' class="active"' if @tab == :login %>>
                                <%= link_to "Login", login_path %>
                            </li>
                        <% end %>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </div>
    </div>

    <div class="container">

        <div class="content">

            <%= yield %>

        </div>

        <hr>

        <footer>
            <p>Purerasmus &copy; 2012</p>
        </footer>

    </div> <!-- /container -->

</body>
</html>